<header>

    <%= link "", class: "logo", to: page_path(@conn, :index) %>

    <%= if logged_in?(@conn) do %>
        <%= link "Log out", to: page_path(@conn, :logout) %>
        <div class="profile-container">
            <img src=<%= avatar(@conn) %> />
            <p><%= username(@conn) %></p>
        </div>
    <%= else %>
        <%= link "Log in", to: page_path(@conn, :login) %>
    <%= end %>

</header>
